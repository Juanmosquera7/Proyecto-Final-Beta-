<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.alojamiento.controladores.MisReservasControlador"
            prefHeight="600.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="50">
        <Label text="Mis Reservas" style="-fx-font-size: 20;"/>

        <!-- Listado de reservas -->
        <ListView fx:id="listViewReservas" prefHeight="300.0" prefWidth="500.0"/>

        <HBox spacing="10">
            <Button text="Ver Detalles" onAction="#verDetallesReserva"/>
            <Button text="Cancelar Reserva" onAction="#cancelarReserva"/>
        </HBox>
    </VBox>
</AnchorPane>

